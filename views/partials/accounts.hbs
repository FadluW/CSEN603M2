<div class="cont" style="margin-top: 5px;">
    <table>
        <tr>
            <th style="text-align: left;">Account Number</th>
            <th style="width: 20%; text-align: right">Balance</th>
            <th style="width: 92px">Currency</th>
        </tr>
        {{!-- Iterate over each account --}}
        {{#each accountsArr}}
            <tr>
                <td>{{this.ID}}</td>
                <td style="text-align: right;">{{this.balance}}</td>
                <td style="text-align: center;">{{this.currency}}</td>
            </tr>
        {{/each}}
    </table>
</div>