<div class="cont" style="margin-top: 5px;">
    Card Requests
    <table>
        <tr>
            <th style="text-align: left;">Username</th>
            <th style="width: 20%; text-align: right">View User Accounts</th>
            <th style="width: 92px">.</th>
        </tr>
        {{!-- Iterate over each account --}}
        {{#each cardArr}}
            <tr>
                <td style="text-align: left;">{{this.username}}</td>
                <td style="vertical-align:baseline">
                    <a href="/accounts?user={{this.username}}">
                        <button class="buttonSmall">VIEW</button>
                    </a>
                </td>
                <td style="vertical-align:baseline">
                    <form action="/grantCard/{{this.accountNum}}/{{@key}}" method="post">
                        <button class="buttonSmall" type="submit">ACCEPT</button>
                    </form>
                    <form action="/removeReq/{{@key}}/card" method="post">
                        <button class="buttonSmall" type="submit">REJECT</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </table>
</div>