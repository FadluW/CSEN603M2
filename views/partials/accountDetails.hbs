<div class="cont" style="margin-top: 5px;">
    <table>
        {{#if noTrans}}
            <tr>
                No transactions have been made on this account.
            </tr>
        {{else}}
        <tr>
            <th style="text-align: left;">ID</th>
            <th style="width: 20%; text-align: right">To / From</th>
            <th style="width: 20%; text-align: right">Details</th>
            <th style="width: 92px">Amount</th>
        </tr>
            {{!-- Iterate over each account transaction --}}
            {{#each accountsArr}}
                <tr>
                    <td style="text-align: left;">{{this.ID}}</td>
                    <td >{{this.to}} / {{this.from}}</td>
                    <td style="text-align: right;">{{this.details}}</td>
                    <td style="text-align: right;">{{this.amount}}<td>
                </tr>
            {{/each}}
        {{/if}}
    </table>
</div>