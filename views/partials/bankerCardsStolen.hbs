<div class="cont" style="margin-top: 5px;">
    Cards Stolen Requests
    <table>
        <tr>
            <th style="text-align: left;">Username</th>
            <th style="text-align: left;">Card ID</th>
            <th style="width: 20%; text-align: right">Message</th>
            <th style="width: 92px">.</th>
        </tr>
        {{!-- Iterate over each account --}}
        {{#each cardStolenArr}}
            <tr>
                <td style="text-align: left;">{{this.username}}</td>
                <td style="text-align: left;">{{@key}}</td>
                <td style="text-align: left;">{{this.message}}</td>
                <td style="vertical-align:baseline">
                    <form action="/replaceCard/{{this.username}}/{{@key}}" method="post">
                        <button class="buttonSmall" type="submit">REPLACE</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </table>
</div>