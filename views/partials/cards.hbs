<div class="cont" style="margin-top: 5px;">
    <table>
        <tr>
            <th style="text-align: left;">Card Number</th>
            <th style="width: 20%; text-align: right">Balance</th>
            <th style="width: 92px">Currency</th>
            <th style="text-align: left;">Account Number</th>
            <th style="width: 92px">Details</th>
            <th style="width: 92px">Report</th>
        </tr>
        {{!-- Iterate over each account --}}
        {{#each cardsArr}}
            <tr>
                <td style="text-align: left;">{{this.ID}}</td>
                <td style="text-align: right;">{{this.balance}}</td>
                <td>{{this.currency}}</td>
                <td style="text-align: right;">{{this.linkedTo}}</td>
                <td style="vertical-align:baseline">
                    <form method="POST">
                        <button type="submit" formmethod="post" class="buttonSmall">VIEW</button>
                    </form>
                </td>
                <td style="vertical-align:baseline">
                    {{!-- TODO: Create small form to confirm --}}
                    <form method="POST" action="/reportCard">
                        <button type="submit" formmethod="post" class="buttonSmall">REPORT</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </table>
</div>