<div class="cont" style="margin-top: 5px;">
    <table>
        <tr>
            <th style="text-align: left;">Card Number</th>
            <th style="text-align: left;">Account Number</th>
            <th style="width: 20%; text-align: right">Balance</th>
            <th style="width: 92px">Det/Rep</th>
        </tr>
        {{!-- Iterate over each account --}}
        {{#each cardsArr}}
            <tr>
                <td style="text-align: left;">{{this.ID}}</td>
                <td style="text-align: right;">{{this.linkedTo}}</td>
                <td style="text-align: right;">{{this.balance}}</td>
                <td style="vertical-align:baseline">
                    <button type="submit" formmethod="post" class="buttonSmall" formaction="/viewCard">VIEW</button>
                    <button type="submit" onclick="toggleReport({{this.ID}})" class="buttonSmall" disabled={{this.frozen}}>REPORT</button>
                </td>
            </tr>
        {{/each}}
    </table>
</div>
{{> reportCardForm}}
<script>
    function reportCard(cardID) {
        console.log(`report ${cardID} stolen`)
    }
</script>